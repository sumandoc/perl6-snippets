	"prefix": "cls",
	"body": [
		"class $1 {"
			"\thas $2;"
			"\thas $3;"
			"\tmethod $4 {"
				"\t\t$5;"
				"\t}"
				"\t$0"
				"}"
	],
	"description": "Class definition"
}

"Method": {
	"prefix": "md",
