{
/*
	// Place your snippets for Perl 6 here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console": {
		"prefix": "log",
		"body": [
			"console.log('$1');",
			"$2"
		],
		"description": "Log output to console"
	}
*/
"Variable": {
	"prefix": "var",
	"body": [
		"my $1 = $2;"
	],
	"description": "local variable"
}

"Say": {
	"prefix": "say",
	"body": [
		"say $1;"
	],
	"description": "Printing without newline"
}
"Print": {
	"prefix": "print",
	"body": [
		"print $1;"
	],
	"description": "Print with newline"
}
"For loop": {
	"prefix": "for",
	"body": [
		"for $1 {"
			"\t$2 ;"
			"\t}"
			"$0"
	],
	"description": "local variable"
}

"Forp loop": {
	"prefix": "forp",
	"body": [
		"for $1 -> $2 {"
			"\t$3 ;"
			"\t}"
			"$0"
	],
	"description": "For loop with pointy block"

"Conditional": {
	"prefix": "if",
	"body": [
		"if $1 {"
			"\t$2;"
			"\t}"
			"$0"
	],
	"description": "If conditional"
}

"Conditional": {
	"prefix": "elsif",
	"body": [
		"elsif $1 {"
			"\t$2;"
			"\t}"
			"$0"
	],
	"description": "Else if branch"
}

"Conditional": {
	"prefix": "else",
	"body": [
		"else {"
			"\t$1;"
			"};"
			"$0"
	],
	"description": "Else branch"
}

"Function": {
	"prefix": "sub",
	"body": [
		"sub $1($2) {"
			"\t$3;"
			"\t}"
			"$0"
	],
	"description": "subroutine"
}

"Class": {
	"prefix": "cls",
	"body": [
		"class $1 {"
			"\thas $2;"
			"\thas $3;"
			"\tmethod $4 {"
				"\t\t$5;"
				"\t}"
				"}"
				"$0"
	],
	"description": "Class definition"
}

"Method": {
	"prefix": "md",
	"body": [
		"method $1 {"
			"\t$2;"
			"}"
			"$0"
	],
	"description": "method"
}

